@media only screen and (max-width: 1200px) {
	.colMain {
		width: 100%;
	}
	.modTabs, .modOpts {
		display: none;
	}

	.joker {
 		display: block;
	}
}

@media only screen and (min-height: 3100px) and (min-resolution: 4dppy) and (orientation: portrait) {
	.colMain {
		width: 75%;
		transform-origin: top left;
		transform: scale(1.33);
	}
	.joker {
 		background: orange;
	}
}

@media only screen and (max-width: 1500px) and (max-resolution: 3dppx) and (orientation: portrait) {
	.colMain {
		width: 50%;
		transform-origin: top left;
		transform: scale(2);
	}
	.joker {
 		background: yellow;
	}
}

@media only screen and (max-width: 1500px) and (max-resolution: 2dppx) and (orientation: portrait) {
	.colMain {
		width: 33%;
#		zoom: 3;
		transform: scale(3);
	}
	.joker {
 		background: green;
	}
}

@media only screen and (max-width: 1000px) and (max-resolution: 2dppx) and (orientation: portrait) {
	.colMain {
		width: 50%;
#		zoom: 3;
		transform: scale(2);
	}
	.joker {
 		background: cadetblue;
	}
}
